<h1>
  Random Results
</h1>

<%@min=params.fetch("user_min").to_f%>
<%@max=params.fetch("user_max").to_f%>

<%@random=rand(@min...@max)%>

<dl>
  <dt>
    Minimum
  </dt>
  <dd>
    <%=@min%>
  </dd>

  <dt>
    Maximum
  </dt>
  <dd>
    <%=@max%>
  </dd>

  <dt>
    Random Number
  </dt>
  <dd>
    <%=@random%>
  </dd>
</dl>

<a href="/random/new">
  Pick another random number
</a>
